<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Time Capsule</title>
</head>
<body>
  <h1>Welcome to the Time Capsule API</h1>
  <form action="/create" method="POST" enctype="multipart/form-data">
    <input type="text" name="userId" placeholder="User ID" required>
    <textarea name="text" placeholder="Your message" required></textarea>
    <input type="file" name="files" multiple>
    <input type="datetime-local" name="openDate" required>
    <button type="submit">Create Time Capsule</button>
  </form>

  <h2>Get Countdown</h2>
  <input type="text" id="countdownId" placeholder="Enter Time Capsule ID">
  <button onclick="getCountdown()">Get Countdown</button>
  <p id="countdownResult"></p>

  <h2>Get Content</h2>
  <input type="text" id="contentId" placeholder="Enter Time Capsule ID">
  <button onclick="getContent()">Get Content</button>
  <div id="contentResult"></div>

  <script>
    async function getCountdown() {
      const id = document.getElementById('countdownId').value;
      const response = await fetch(`/countdown/${id}`);
      const data = await response.json();
      document.getElementById('countdownResult').textContent = data.timeLeft || data.message;
    }

    async function getContent() {
      const id = document.getElementById('contentId').value;
      const response = await fetch(`/content/${id}`);
      const data = await response.json();
      const contentResult = document.getElementById('contentResult');

      if (data.files) {
        contentResult.innerHTML = `<p>${data.text}</p>`;
        data.files.forEach(file => {
          const link = document.createElement('a');
          link.href = file;
          link.textContent = file;
          link.target = '_blank';
          contentResult.appendChild(link);
          contentResult.appendChild(document.createElement('br'));
        });
      } else {
        contentResult.textContent = data.text || data.message;
      }
    }
  </script>
</body>
</html>