<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Time Capsule</title>
</head>
<body>
  <h1>Welcome to the Time Capsule API</h1>
  <form action="/api/submit" method="POST" enctype="multipart/form-data">
    <input type="text" name="userId" placeholder="User ID">
    <textarea name="text" placeholder="Your message"></textarea>
    <input type="file" name="file">
    <input type="datetime-local" name="openDate">
    <button type="submit">Create Time Capsule</button>
  </form>

  <h2>Get Countdown</h2>
  <input type="text" id="countdownId" placeholder="Enter Time Capsule ID">
  <button onclick="getCountdown()">Get Countdown</button>
  <p id="countdownResult"></p>

  <h2>Get Content</h2>
  <input type="text" id="contentId" placeholder="Enter Time Capsule ID">
  <button onclick="getContent()">Get Content</button>
  <p id="contentResult"></p>

  <script>
    async function getCountdown() {
      const id = document.getElementById('countdownId').value;
      const response = await fetch(`/countdown/${id}`);
      const data = await response.json();
      document.getElementById('countdownResult').textContent = data.timeLeft || data.message;
    }

    async function getContent() {
      const id = document.getElementById('contentId').value;
      const response = await fetch(`/content/${id}`);
      const data = await response.json();
      document.getElementById('contentResult').textContent = data.text || data.message;
    }
  </script>
</body>
</html>